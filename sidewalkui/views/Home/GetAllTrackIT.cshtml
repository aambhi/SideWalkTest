        //    $("#tooltip").fadeOut().remove();
        //}


        $(".showhover").hover(function () {
            $('#modal2').modal({
                show: true,
                backdrop: false
            })
        })
        //, function () {
        //    $("#modal2").modal('hide');
        //});
    });

