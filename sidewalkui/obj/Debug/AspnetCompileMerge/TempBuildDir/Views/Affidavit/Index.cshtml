                                        <th>Posting Date</th>
                                        <th>TrackIT & Notes</th>
                                        <th>Inspector</th>*@
                                </tr>
                            </thead>
                            <thead class="filters">
                                <tr>
                                    @*<th></th>*@
                                    <th>Affidavit</th>
                                    <th>Property Address</th>
                                    @*<th>Property Id</th>
                                        <th>Inspectation Date</th>
